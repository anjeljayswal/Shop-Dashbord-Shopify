{% comment %}
  This is an App Embed that injects `gift.js` into the storefront <head>.
{% endcomment %}

<script src="{{ 'gift.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Free Gift Embed",
  "target": "head",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_gift",
      "label": "Enable free gift",
      "default": true
    }
  ]
}
{% endschema %}
